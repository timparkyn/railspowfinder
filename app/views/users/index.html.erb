<h1>All Users</h1>

<div class='row'>
  <div class='col-sm-3'></div>
  <div class='col-sm-6 forecastBox'>
    <ul>
      <% @users.each do |user| %>
        <li>
          <%= link_to user.name, user %>
          <%= link_to user.email, user %>
          <% if current_user.admin?  && !current_user?(user) %>
            | <%= link_to "delete", user, method: :delete,
                                          data: { confirm: "You sure?" } %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
  <div class='col-sm-3'></div>
</div>
