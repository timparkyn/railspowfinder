<div class="card-deck">
  <% @forecasts.each do |fcast| %>
    <div class="card card-body forecastBox col-md-5 col-sm-5 col-xs-4">
       <%= button_to('Remove', user_selection_path(:id => fcast[:station_id]), {method: :delete}) %>
      <h5 class='card-title'>
        <%= fcast[:description] %><br />
        <%= fcast[:elevation] %>
      </h5>
      <div class="card-text small">
        <%= fcast[:observations][:time]%><br />
        <span>Temp: <%= fcast[:observations][:temp] %>Â°F</span><br />
        <span>Winds: <%= fcast[:observations][:wind] %></span><br />
        <span>Precip (today/1hr): <%= fcast[:observations][:precip_today] %></span>
        <span><%= fcast[:observations][:precip_1hr] %></span><br />
      </div>
        <br />
        <div class="table-responsive-sm">s
          <table class='table-sm text-center table mb-0'>
            <thead class="thead-dark">
              <tr>
                <th></th>
                <th>POP</th>
                <th>QPF</th>
                <th>QSF</th>
                <th>Wind</th>
              </tr>
          </thead>
          <% fcast[:daily_fx].each do |daily_fx| %>
            <tr>
              <th><%= daily_fx[:day] %></th>
              <td><%= daily_fx[:pop] %></td>
              <td><%= daily_fx[:qpf] %></td>
              <td><%= daily_fx[:snow_in] %></td>
              <td><%= daily_fx[:max_wind_mph] %></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  <% end %>
</div>
