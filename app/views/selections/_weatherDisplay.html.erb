<div class="card-deck">
  <% @forecasts.each do |fcast| %>
    <!-- button_to('Remove', user_selections_path(current_user.id, fcast[:id]), method: :delete)  -->
    <%= fcast[:selection_id] %>

    <div class="card card-body forecastBox col-md-5 col-sm-5 col-xs-4">
      <%= button_to('Remove', user_selection_path(:id => fcast[:selection_id]), {method: :delete} ) %>
       <!-- button_to('Remove', fcast[:selection_id], {method: :delete} )   -->
      <!-- button_to('Remove', user_selections_path, {method: :delete} )  -->
      <!-- {station: {id: fcast[:id]}}       ({station: {id: fcast[:id]}})-->
      <!-- controller => :selections -->

      <!-- controller => fcast.id -->
      <!-- button_to('Remove', user_selections_path, {:action => 'destroy'}, {:id => :selection_id} , {method: :delete} ) -->

      <h4 class='card-title'>
        <%= fcast['observations'].display_location.full %>&nbsp—&nbsp<%= fcast['observations'].station_id %><br />
      </h4>
      <h6>
        <%= fcast['observations'].observation_time %><br />
      </h6>
      <div class="card-text small">
        <span>Temp: <%= fcast['observations'].temp_f %>°F</span><br />
        <span>Winds: <%= fcast['observations'].wind_string %></span><br />
        <span>Precip (today/1hr): <%= fcast['observations'].precip_today_in %></span>
        <span><%= fcast['observations'].precip_1hr_in %></span><br />
      </div>
        <br />
        <div class="table-responsive-sm">

          <table class='table-sm text-center table mb-0'>
            <thead class="thead-dark">
              <tr>
                <th></th>
                <th>POP</th>
                <th>QPF</th>
                <th>QSF</th>
                <th>Wind</th>
              </tr>
          </thead>
            <% (0..3).each do |n| %>
              <tr>
                <th><%= fcast['dailyFx']['day'][n] %></th>
                <td><%= fcast['dailyFx']['pop'][n] %></td>
                <td><%= fcast['dailyFx']['qpf'][n] %></td>
                <td><%= fcast['dailyFx']['snowIn'][n]  %></td>
                <td><%= fcast['dailyFx']['maxwindMph'][n]  %></td>
              </tr>
            <% end %>
        </table>
      </div>
    </div>
  <% end %>

</div>

<br /><br /><br />
