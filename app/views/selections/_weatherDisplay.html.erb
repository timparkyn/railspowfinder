<div class="card-deck">
  <% @forecasts.each do |fcast| %>

    <div class="card card-body forecastBox col-md-5 col-sm-5 col-xs-4">
      <%= button_to('Remove', user_selection_path(:id => fcast[:station_id]), {method: :delete} ) %>

      <h5 class='card-title'>
        <%= fcast[:description] %><br />
        <%= fcast[:elevation] %>
      </h5>

      <div class="card-text small">
        <%= (fcast[:observations].observation_time_rfc822) %><br />
        <span>Temp: <%= fcast[:observations].temp_f %>Â°F</span><br />
        <span>Winds: <%= fcast[:observations].wind_string %></span><br />
        <span>Precip (today/1hr): <%= fcast[:observations].precip_today_in %></span>
        <span><%= fcast[:observations].precip_1hr_in %></span><br />
      </div>
        <br />
        <div class="table-responsive-sm">

          <table class='table-sm text-center table mb-0'>
            <thead class="thead-dark">
              <tr>
                <th></th>
                <th>POP</th>
                <th>QPF</th>
                <th>QSF</th>
                <th>Wind</th>
              </tr>
          </thead>
            <% (0..3).each do |n| %>
              <tr>
                <th><%= fcast[:daily_fx][:day][n] %></th>
                <td><%= fcast[:daily_fx][:pop][n] %></td>
                <td><%= fcast[:daily_fx][:qpf][n] %></td>
                <td><%= fcast[:daily_fx][:snow_in][n]  %></td>
                <td><%= fcast[:daily_fx][:max_wind_mph][n]  %></td>
              </tr>
            <% end %>
        </table>
      </div>
    </div>
  <% end %>

</div>

<br /><br /><br />
