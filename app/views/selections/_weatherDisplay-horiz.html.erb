  <% @forecasts.each do |fcast| %>
    <% if fcast %>
      <div class='row'> <!--  d-flex  flex-columncard-body col-lg-4 col-xs-12-->
          <div class='forecastBox'>
          <div class='col-sm-8 col-md-6 col-lg-3 title'>
            <div class='item'><%= fcast[:description] %></div>
            <div class='item'><%= fcast[:elevation] %></div>
            <div class='item'><%= fcast[:observations][:temp] %>Â°F</div>
          </div>
            <div class='tableScape'>
              <div class='col-md-4 info'>
                <span>Precip: (1hr | 24hrs): <%= fcast[:observations][:precip_1hr] %>&nbsp;|&nbsp;<%= fcast[:observations][:precip_today] %></span>
                  <span><%= link_to('Remove',
                user_selection_path(:id => fcast[:station_id]), {method: :delete, class: 'btn btn-default btnRemove'}) %></span>
              </div>
              <div class='table-responsive col-sm-8 col-md-6 pull-right'> <!-- forecastTable -->
                <table  class='table table-condensed forecastTable text-right '>
                  <thead>
                    <tr scope='row'>
                      <th></th>
                      <th class='text-right'><%= fcast[:daily_fx][0][:day] %></th>
                      <th class='text-right'><%= fcast[:daily_fx][1][:day] %></th>
                      <th class='text-right'><%= fcast[:daily_fx][2][:day] %></th>
                      <th class='text-right'><%= fcast[:daily_fx][3][:day] %></th>
                      <!-- <th></th>
                      <th>POP</th>
                      <th>QPF</th>
                      <th>QSF</th>
                      <th>Wind</th> -->
                    </tr>
                </thead>
                <tbody>
                  <tr scope='row'>
                    <th><i class='wi wi-humidity icon-humidity' title='Probably of Precipitation'></i></th> <!--POP -->
                    <td><%= fcast[:daily_fx][0][:pop] %></td>
                    <td><%= fcast[:daily_fx][1][:pop] %></td>
                    <td><%= fcast[:daily_fx][2][:pop] %></td>
                    <td><%= fcast[:daily_fx][3][:pop] %></td>
                  </tr>
                  <tr scope='row'>
                    <th><i class='fas fa-tint' title='Forecasted Precipitation'></i></th> <!--QPF wi wi-raindrop icon-->
                    <td><%= fcast[:daily_fx][0][:qpf] %></td>
                    <td><%= fcast[:daily_fx][1][:qpf] %></td>
                    <td><%= fcast[:daily_fx][2][:qpf] %></td>
                    <td><%= fcast[:daily_fx][3][:qpf] %></td>
                  </tr>
                  <tr scope='row'>
                    <th><i class='fas fa-snowflake icon-snow' title='Forecasted Snow'></i></th> <!--SNOW -->
                    <td><%= fcast[:daily_fx][0][:snow_in] %></td>
                    <td><%= fcast[:daily_fx][1][:snow_in] %></td>
                    <td><%= fcast[:daily_fx][2][:snow_in] %></td>
                    <td><%= fcast[:daily_fx][3][:snow_in] %></td>
                  </tr>
                  <tr scope='row'>
                    <th><i class='wi wi-strong-wind icon' title='Forecasted Max Winds'></i></th> <!--WIND -->
                    <td><%= fcast[:daily_fx][0][:max_wind_mph] %></td>
                    <td><%= fcast[:daily_fx][1][:max_wind_mph] %></td>
                    <td><%= fcast[:daily_fx][2][:max_wind_mph] %></td>
                    <td><%= fcast[:daily_fx][3][:max_wind_mph] %></td>
                  </tr>
                <!-- <% fcast[:daily_fx].each do |daily_fx| %>
                  <tr>
                    <th><%= daily_fx[:day] %></th>
                    <td><%= daily_fx[:pop] %></td>
                    <td><%= daily_fx[:qpf] %></td>
                    <td><%= daily_fx[:snow_in] %></td>
                    <td><%= daily_fx[:max_wind_mph] %></td>
                  </tr>
                <% end %> -->
              </tbody>
              </table>
            </div>
          </div>

        <div class='updateTime'>
          <%= fcast[:observations][:time]%>
        </div>
      </div>
      </div>
    <% end %>
  <% end %>

